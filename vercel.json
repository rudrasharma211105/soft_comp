{
    "version": 2,
    "builds": [
        {
            "src": "backend/main.py",
            "use": "@vercel/python"
        },
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "backend/main.py"
        },
        {
            "source": "/(assets/.*)",
            "destination": "frontend/$1"
        },
        {
            "source": "/((?!api/).*)",
            "destination": "frontend/index.html"
        }
    ]
}